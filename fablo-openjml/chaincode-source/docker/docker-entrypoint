#!/bin/sh -euC

: ${CORE_PEER_TLS_ENABLED:='false'}
: ${DEBUG:='false'}

OPTS='-Dorg.jmlspecs.openjml.rac=exception'

if [ "$DEBUG" = true ]; then
   exec java $OPTS -agentlib:jdwp=transport=dt_socket,server=y,suspend=n,address=0.0.0.0:8000 -jar /chaincode.jar
else
   exec java $OPTS -jar /chaincode.jar
fi
